<div>
  <%= form_for [list, item], html: {class: 'form-inline'} do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='form-group'>
      <%= f.label :qty %>
      <%= f.number_field :qty %>
    </div>
    <%= f.submit 'Add Item', class: 'btn btn-primary' %>
  <% end %>
</div>