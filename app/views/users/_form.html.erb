<div class='well'>
  <%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
    <div class='form-group'>
      <%= f.label :username, class: 'col-sm-1 control-label'%>
      <div class='col-sm-3'>
        <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :email, class: 'col-sm-1 control-label' %>
      <div class='col-sm-3'>
        <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password, class: 'col-sm-1 control-label' %>
      <div class='col-sm-3'>
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-1 col-sm-3'>
        <%= f.submit (@user.new_record? ? 'Register' : 'Edit Profile'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
