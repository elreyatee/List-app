<div class='well'>
  <%= form_tag '/login', class: 'form-horizontal', id: 'login' do %>
    <div class='form-group'>
      <%= label_tag :username, nil, class: 'col-sm-1 control-label' %>
      <div class='col-sm-3'>
        <%= text_field_tag :username, nil, placeholder: 'Username', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= label_tag :email, nil, class: 'col-sm-1 control-label'  %>
      <div class='col-sm-3'>
        <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control'  %>
      </div>
    </div>
    <div class='form-group'>
      <%= label_tag :password, nil, class: 'col-sm-1 control-label'  %>
      <div class='col-sm-3'>
        <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control'  %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-1 col-sm-3'>
        <%= check_box_tag :remember_me, true, class: 'form-control' %> Remember Me
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-1 col-sm-3'>
        <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

