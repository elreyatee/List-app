<%= render 'shared/content_title', title: @list.name %>

<div>
  <%= form_for [@list, @item], html: {class: "form-inline"} do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='form-group'>
      <%= f.label :qty %>
      <%= f.number_field :qty %>
    </div>
    <%= f.submit 'Add Item', class: "btn btn-primary" %>
  <% end %>
</div>

<br/>

<div>
  <% unless @list.items.empty? %>
    <%= form_for @list, method: :patch do |f| %>
      <ul class="list-unstyled">
        <%= f.fields_for :items do |item_form| %>
          <li>
            <%= item_form.check_box :_destroy %>
            <%= item_form.object.name %>
            <%= item_form.object.description %>
            qty: <%= item_form.object.qty %>
          </li>
        <% end %>
      </ul>
      <%= f.submit 'Delete Items', class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>